  "item": [
    {
      "name": "Auth - Get Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenant_id\": \"{{tenantId}}\",\n  \"user_id\": \"{{userId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/token",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "token"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.token) {",
              "  pm.environment.set('token', json.token);",
              "  console.log('Token updated in environment');",
              "} else {",
              "  console.warn('Token not present in response');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
